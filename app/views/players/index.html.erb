<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Wins</th>
      <th>Matches</th>
      <th>Win percentage</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= image_tag player.image.url(:medium) %></td>
        <td><%= player.name %></td>
        <td><%= player.wins %></td>
        <td><%= player.matches %></td>
        <td><%= player.win_percentage %></td>
        <td><%= player.user_id %></td>
        <td><%= link_to 'Show', player %></td>

    <% if (player.user == current_user) %>
      <td><%= link_to 'Edit', edit_player_path(player) %></td>
      <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>

    <% if (current_user.try(:admin?)) %>
      <td><%= link_to 'Admin Edit', edit_player_path(player) %></td>
      <td><%= link_to 'Admin Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Player', new_player_path %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
<div>
  Sign up to enter your own cute fluffy players into the arena!
</div>
<% end %> <!-- end if user signed in check -->

